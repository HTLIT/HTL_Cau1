<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <TextView
        android:textColor="@android:color/holo_red_light"
        android:textSize="30dp"
        android:text="Phương trình bậc hai"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="20dp"
        android:text="Vui lòng nhập vào giá trị a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:inputType="number"
        android:textColor="@android:color/black"
        android:textSize="18dp"
        android:id="@+id/a_edittext"
        android:hint="Nhập a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="20dp"
        android:text="Vui lòng nhập vào giá trị b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:inputType="number"
        android:textColor="@android:color/black"
        android:textSize="18dp"
        android:id="@+id/b_edittext"
        android:hint="Nhập b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="20dp"
        android:text="Vui lòng nhập vào giá trị c"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:inputType="number"
        android:textColor="@android:color/black"
        android:textSize="18dp"
        android:id="@+id/c_edittext"
        android:hint="Nhập c"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button
            android:layout_marginLeft="60dp"
            android:text="Giải"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_blue_light"
            android:id="@+id/btn_xuat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:layout_marginLeft="80dp"
            android:text="Làm mới"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_blue_light"
            android:id="@+id/btn_clr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@android:color/holo_orange_light"
            android:textSize="30dp"
            android:id="@+id/kq_text"
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>